<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <TargetFrameworks>netstandard2.1;net472;net6;net7</TargetFrameworks>
        <RootNamespace>AndreasReitberger.API.OctoPrint</RootNamespace>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Andreas Reitberger</Authors>
        <Company>Andreas Reitberger</Company>
        <Description>A simple Rest-API-Client for interacting with a OctoPrint instance from any C# project.</Description>
        <Version>1.2.1</Version>
        <Copyright>Andreas Reitberger</Copyright>
        <RepositoryUrl>https://github.com/AndreasReitberger/OctoPrintSharpApi</RepositoryUrl>
        <PackageTags>OctoPrint, Server, API, Rest, Sharp, Csharp, Web, Client</PackageTags>
        <LangVersion>10.0</LangVersion>
        <PackageProjectUrl>https://github.com/AndreasReitberger/OctoPrintRestApiSharp</PackageProjectUrl>
        <PackageLicenseExpression>Apache-2.0</PackageLicenseExpression>
        <PackageReadmeFile>README.md</PackageReadmeFile>
    </PropertyGroup>
	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.1.0" />
		<PackageReference Include="Newtonsoft.Json" Version="13.0.2" />
		<PackageReference Include="RCoreSharp" Version="1.0.8" />
		<PackageReference Include="RestSharp" Version="108.0.3" />
		<PackageReference Include="System.Memory" Version="4.5.5" />
		<PackageReference Include="System.Net.Http" Version="4.3.4" />
		<PackageReference Include="WebSocket4Net" Version="0.15.2" />
		<None Include="..\..\README.md" Pack="true" PackagePath="\" />
	</ItemGroup>
</Project>
